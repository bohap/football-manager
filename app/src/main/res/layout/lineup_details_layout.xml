<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/spinner"
            android:visibility="gone" />
        <include
            layout="@layout/request_failed_partial"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/lineupDetailsLayout_mainContent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                style="@style/MainContent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/lineupDetailsLayout_mainIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/base_horizontalMargin"
                    android:layout_marginEnd="@dimen/base_horizontalMargin"
                    android:src="@drawable/lineup"
                    android:contentDescription="@string/lineupDetailsActivity_lineupIconDesc" />
                <com.android.finki.mpip.footballdreamteam.ui.view.TextAwesome
                    android:id="@+id/lineupDetailsLayout_userIcon"
                    style="@style/TextView.Icon"
                    android:layout_toRightOf="@id/lineupDetailsLayout_mainIcon"
                    android:layout_toEndOf="@id/lineupDetailsLayout_mainIcon"
                    android:layout_marginRight="@dimen/small_horizontalMargin"
                    android:layout_marginEnd="@dimen/small_horizontalMargin"
                    android:text="@string/fa_user" />
                <TextView
                    android:id="@+id/lineupDetailsLayout_user"
                    style="@style/TextView"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/lineupDetailsLayout_userIcon"
                    android:layout_toEndOf="@+id/lineupDetailsLayout_userIcon" />
                <Button
                    android:id="@+id/lineupDetailsLayout_btnShowPlayers"
                    style="@style/Button.Small.Default"
                    android:layout_toLeftOf="@+id/lineupDetailsLayout_btnRemove"
                    android:layout_toStartOf="@+id/lineupDetailsLayout_btnRemove"
                    android:layout_alignTop="@+id/lineupDetailsLayout_btnRemove"
                    android:layout_marginRight="@dimen/base_horizontalMargin"
                    android:layout_marginEnd="@dimen/base_horizontalMargin"
                    android:text="@string/lineupDetailsActivity_btnPlayers_text" />

                <com.android.finki.mpip.footballdreamteam.ui.view.ButtonAwesome
                    android:id="@+id/lineupDetailsLayout_btnRemove"
                    style="@style/Button.Small.Danger.Icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/lineupDetailsLayout_userIcon"
                    android:layout_marginTop="@dimen/base_verticalMargin"
                    android:text="@string/fa_trash" />
            </RelativeLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/lineupDetailsActivity_tabLayout"
                style="@style/TabLayout" />
            <android.support.v4.view.ViewPager
                android:id="@+id/lineupDetailsActivity_viewPager"
                style="@style/Block" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>